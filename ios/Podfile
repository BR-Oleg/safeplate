# Uncomment this line to define a global platform for your project
platform :ios, '14.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      # Configuração mínima do iOS
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
      
      # Configurações para Firebase e outras dependências nativas
      config.build_settings['ENABLE_BITCODE'] = 'NO'
      
      # Permitir warnings para compatibilidade
      config.build_settings['GCC_WARN_INHIBIT_ALL_WARNINGS'] = 'NO'
      
      # Configurações para Swift (se necessário)
      config.build_settings['SWIFT_VERSION'] = '5.0'
      
      # CI speedups / simulator arch filtering
      config.build_settings['ONLY_ACTIVE_ARCH'] = 'YES'
      config.build_settings['ARCHS'] = 'arm64'
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'i386 x86_64'
      config.build_settings['COMPILER_INDEX_STORE_ENABLE'] = 'NO'
      config.build_settings['SWIFT_COMPILATION_MODE'] = 'wholemodule'

      # Sanitizar flags inválidas (ex.: "-GCC_WARN_INHIBIT_ALL_WARNINGS") em quaisquer chaves de OTHER_*FLAGS (inclusive condicionais)
      keys = config.build_settings.keys.grep(/^OTHER_C(PLUSPLUS)?FLAGS/) + ['OTHER_CFLAGS','OTHER_CPLUSPLUSFLAGS']
      keys.uniq.each do |key|
        flags = config.build_settings[key]
        next if flags.nil?
        list = flags.is_a?(String) ? flags.split(' ') : Array(flags).map(&:to_s)
        filtered = list.reject { |f| f.strip == '-GCC_WARN_INHIBIT_ALL_WARNINGS' || f.strip == 'GCC_WARN_INHIBIT_ALL_WARNINGS' || f.strip.start_with?('-GCC_WARN_INHIBIT_ALL_WARNINGS') }
        filtered = (['$(inherited)'] + filtered).uniq
        config.build_settings[key] = filtered
      end

      xcref = config.base_configuration_reference
      if xcref
        path = xcref.real_path.to_s
        if File.exist?(path)
          data = File.read(path)
          data = data.gsub(/^OTHER_CFLAGS(\[.*\])?\s*=\s*(.*)$/) do
            lhs = Regexp.last_match(1) ? "OTHER_CFLAGS#{Regexp.last_match(1)}" : 'OTHER_CFLAGS'
            rhs = Regexp.last_match(2)
            tokens = rhs.split(/\s+/)
            tokens = tokens.reject { |t| t.strip == '-GCC_WARN_INHIBIT_ALL_WARNINGS' || t.strip == 'GCC_WARN_INHIBIT_ALL_WARNINGS' || t.strip.start_with?('-GCC_WARN_INHIBIT_ALL_WARNINGS') }
            "#{lhs} = #{tokens.join(' ')}"
          end
          data = data.gsub(/^OTHER_CPLUSPLUSFLAGS(\[.*\])?\s*=\s*(.*)$/) do
            lhs = Regexp.last_match(1) ? "OTHER_CPLUSPLUSFLAGS#{Regexp.last_match(1)}" : 'OTHER_CPLUSPLUSFLAGS'
            rhs = Regexp.last_match(2)
            tokens = rhs.split(/\s+/)
            tokens = tokens.reject { |t| t.strip == '-GCC_WARN_INHIBIT_ALL_WARNINGS' || t.strip == 'GCC_WARN_INHIBIT_ALL_WARNINGS' || t.strip.start_with?('-GCC_WARN_INHIBIT_ALL_WARNINGS') }
            "#{lhs} = #{tokens.join(' ')}"
          end
          File.write(path, data)
        end
      end

      begin
        Dir.glob('Pods/Target Support Files/**/*.xcconfig').each do |xc|
          data = File.read(xc)
          data = data.gsub(/(^|\s)-GCC_WARN_INHIBIT_ALL_WARNINGS(\s|$)/, ' ')
          data = data.gsub(/^OTHER_CFLAGS(\[.*\])?\s*=\s*(.*)$/) do
            lhs = Regexp.last_match(1) ? "OTHER_CFLAGS#{Regexp.last_match(1)}" : 'OTHER_CFLAGS'
            rhs = Regexp.last_match(2)
            tokens = rhs.split(/\s+/)
            tokens = tokens.reject { |t| t.strip == '-GCC_WARN_INHIBIT_ALL_WARNINGS' || t.strip == 'GCC_WARN_INHIBIT_ALL_WARNINGS' || t.strip.start_with?('-GCC_WARN_INHIBIT_ALL_WARNINGS') }
            "#{lhs} = #{tokens.join(' ')}"
          end
          data = data.gsub(/^OTHER_CPLUSPLUSFLAGS(\[.*\])?\s*=\s*(.*)$/) do
            lhs = Regexp.last_match(1) ? "OTHER_CPLUSPLUSFLAGS#{Regexp.last_match(1)}" : 'OTHER_CPLUSPLUSFLAGS'
            rhs = Regexp.last_match(2)
            tokens = rhs.split(/\s+/)
            tokens = tokens.reject { |t| t.strip == '-GCC_WARN_INHIBIT_ALL_WARNINGS' || t.strip == 'GCC_WARN_INHIBIT_ALL_WARNINGS' || t.strip.start_with?('-GCC_WARN_INHIBIT_ALL_WARNINGS') }
            "#{lhs} = #{tokens.join(' ')}"
          end
          File.write(xc, data)
        end
      rescue
      end
    end
  end
end

